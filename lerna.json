{
  "version": "3.0.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "allowBranch": [
        "master",
        "beta",
        "emotion-11"
      ],
      "exact": true,
      "conventionalCommits": true,
      "conventionalPrerelease": true,
      "message": "chore(release): %s"
    },
    "publish": {
      "exact": true,
      "conventionalCommits": true,
      "conventionalPrerelease": true,
      "ignoreChanges": [
        "**/dist/**",
        "**/build/**",
        "**/release/**",
        "**/*.md",
        "**/example/**",
        "**/examples/**",
        "**/test/**",
        "**/tests/**"
      ]
    }
  }
}
